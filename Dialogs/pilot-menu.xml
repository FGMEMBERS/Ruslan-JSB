<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

	<default>

		<menu n="3">
			<item>
				<name>autopilot</name>
				<label>Autopilot Settings</label>
				<binding>
					<command>nasal</command>
					<script>
						var autopilot = gui.Dialog.new("sim/gui/dialogs/autopilot/dialog", "Aircraft/Ruslan-JSB/Dialogs/autopilot9.xml");
						autopilot.open();
					</script>
				</binding>
			</item>
		</menu>

		<menu n="100">
			<enabled type="bool">true</enabled>
			<label>An-124 Ruslan</label>

			<item>
				<label>Autostart</label>
				<binding>
					<command>property-toggle</command>
					<property>sim/model/start-idling</property>
				</binding>
			</item>

			<item>
				<label>NWS ON</label>
				<binding>
					<command>property-assign</command>
					<property>fdm/jsbsim/systems/NWS/engaged</property>
					<value>1</value>
				</binding>
			</item>

			<item>
				<label>NWS OFF</label>
				<binding>
					<command>property-assign</command>
					<property>fdm/jsbsim/systems/NWS/engaged</property>
					<value>0</value>
				</binding>
			</item>

			<item>
				<label>Select Ivchenko DT18T Engines</label>
				<binding>
					<command>property-assign</command>
					<property>engines/engine-set</property>
					<value>DT18T</value>
				</binding>
			</item>

			<item>
				<label>Select Alliance GP7277 Engines</label>
				<binding>
					<command>property-assign</command>
					<property>engines/engine-set</property>
					<value>GP7277</value>
				</binding>
			</item>

			<item>
				<label>Select Livery</label>
				<binding>
					<command>nasal</command>
					<script>aircraft.livery.dialog.toggle()</script>
				</binding>
			</item>

